{
  "_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
  "id": "com.ubiquiti.access",
  "version": "1.0.2",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "platforms": [
    "local"
  ],
  "name": {
    "en": "Ubiquiti UniFi Access"
  },
  "description": {
    "en": "Seamlessly manage door access and security, and let the doors open for you."
  },
  "category": [
    "security"
  ],
  "permissions": [],
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png",
    "xlarge": "/assets/images/xlarge.png"
  },
  "author": {
    "name": "Peter Jensen",
    "email": "peterjuel@gmail.com"
  },
  "brandColor": "#275ed9",
  "flow": {
    "actions": [
      {
        "id": "unlock_for_duration",
        "title": {
          "en": "Unlock door for a specific duration"
        },
        "titleFormatted": {
          "en": "Unlock door for [[duration]] minutes"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=ua-hub"
          },
          {
            "name": "duration",
            "type": "number",
            "title": {
              "en": "Duration in minutes"
            },
            "min": 1
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "name": {
        "en": "Access Hub"
      },
      "class": "lock",
      "capabilities": [
        "locked",
        "next_lock",
        "forced_open"
      ],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          },
          "options": {
            "singular": false
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "platforms": [
        "local"
      ],
      "connectivity": [],
      "images": {
        "small": "/drivers/ua-hub/assets/images/small.png",
        "large": "/drivers/ua-hub/assets/images/large.png",
        "xlarge": "/drivers/ua-hub/assets/images/xlarge.png"
      },
      "id": "ua-hub"
    }
  ],
  "capabilities": {
    "forced_open": {
      "type": "string",
      "title": {
        "en": "Forced open until"
      },
      "getable": true,
      "setable": false,
      "units": {
        "en": ""
      },
      "decimals": 0,
      "insights": false,
      "icon": "/assets/forced_open.svg"
    },
    "next_lock": {
      "type": "string",
      "title": {
        "en": "Scheduled lock at"
      },
      "getable": true,
      "setable": false,
      "units": {
        "en": ""
      },
      "decimals": 0,
      "insights": false,
      "icon": "/assets/next_lock.svg"
    }
  }
}